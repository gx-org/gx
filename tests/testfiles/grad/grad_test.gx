func OverShadow(x float32) float32 {
	x = x*x
	x1 := x // Gradient of x*x: should be 2*x
	x = x+x
	x2 := x // Gradient of (x*x)+(x*x): should be 4*x
	return x1+x2
}

//gx:=grad.Func(OverShadow, "x")
func OverShadowGrad()

func TestOverShadowGrad() float32 {
	return OverShadowGrad(3)
	// Want:
	// float32(18)
}
